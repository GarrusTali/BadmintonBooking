<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sysu.userCenter。BookActivity" >
    <TextView 
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="订单申请"
       android:textColor="@android:color/black"
       android:textSize="24sp"
       android:layout_marginTop="15dp" />
    <LinearLayout 
        android:background="@color/light_green"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >    
      <ImageView 
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:src="@drawable/playground"
          />
      <LinearLayout
          android:layout_margin="10dp"
          android:layout_gravity="center_vertical"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
                android:text="柏均球场"
        		android:id="@+id/name"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textColor="@android:color/black"
        		android:textSize="22sp" />
           <TextView 
        		android:text="联系方式:13929591624"
        		android:layout_width="150dp"
        		android:layout_height="wrap_content"
        		android:id="@+id/phone" />
           <TextView 
        		android:text="地址：至善园二号楼"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:id="@+id/address" />
           <TextView 
         		android:text="简介:12345"
         		android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
         		android:id="@+id/introduction" />
      </LinearLayout>
    </LinearLayout>
    <TextView
         android:layout_marginLeft="10dp"
         android:text="请选择场地:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/black"
         android:textSize="22sp" />
    	<GridView 
    	    android:id="@+id/gridView"
    	    android:layout_marginLeft="10dp"
    	    android:layout_marginRight="10dp"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:verticalSpacing="2dp"
        	android:horizontalSpacing="2dp"
        	android:stretchMode="columnWidth"
        	android:numColumns="13"
        	>
    	</GridView>   
       <TextView
         android:layout_marginLeft="10dp"
         android:text="已选场次:"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/black"
         android:textSize="22sp" />    
        <LinearLayout 
        	android:background="@color/light_green"
        	android:layout_margin="10dp"
        	android:layout_marginTop="10dp"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:orientation="vertical">  
        	<TextView
        	    android:id="@+id/msg_tv"
         		android:layout_margin="10dp"
         		android:text="场地：3号场   时间段：9:00~10:00"
         		android:layout_width="fill_parent"
         		android:layout_height="wrap_content"
         		android:textColor="@android:color/black" /> 
         	<Button
         	    android:layout_marginTop="20dp"
         	    android:id="@+id/submit_btn"
         	    android:layout_gravity="center_horizontal"
         	    android:layout_width="100dp"
         	    android:layout_height="70dp"
         	    android:text="提交订单"
         	    />
        </LinearLayout>   
</LinearLayout>
